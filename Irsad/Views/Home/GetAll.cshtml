
@model IEnumerable<Product>


@{
    ViewData["Title"] = "Get All";
}
@foreach (var item in ViewBag.Tags)
{
    <a class="btn btn-primary" style="margin:5px;" asp-route-controller="Home" asp-route-action="SearchTag" asp-route-id="@item.Id" >@item.Name</a>
}
<form asp-action="Search" asp-controller="Home" class="d-flex" role="search" method="post">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="pattern" />
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>




    @foreach (var item in Model)
    {        
            <div class="card" style="width: 18rem;float:left; margin:5px;">
                <img src="~/Uploads/@item.ImageUrl" class="card-img-top" style="height:200px;" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Price AZN</p>
                    <a asp-route-controller="Home" asp-route-action="Add" asp-route-id="@item.Id" class="btn btn-primary">Add</a>
                </div>
            </div>            
        
    }

